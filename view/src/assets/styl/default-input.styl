.form-input
	position relative
	margin-bottom -1px
	font $font

	input
		display block
		background none
		padding 0.125rem 0.125rem 0.0625rem
		font-family: $font
		font-size 18px
		font-weight 300
		line-height 1.9
		width 100%
		transition all 0.28s ease
		box-shadow none
		border 1px solid #dbdbdb
		height 70px
		padding-left 16px
		padding-top 15px
		color #000
		border-radius 2px
		box-sizing border-box

	input:focus,
	input.has-value
		border 1px solid #dbdbdb
		height 70px
		padding-top 15px
		color #000
		border-radius 2px
		outline none

		~ label
			font-size 11px
			color #AAAAAA
			top 18px

	&-textarea
		border 1px solid #dbdbdb

		textarea
			width 100%
			height 160px
			padding-left 16px
			font-family $font
			font-weight 300
			font-size 18px
			line-height 26px
			border 0
			border-radius 3px
			margin-top 50px
			margin-bottom 30px
			min-height 10px
			outline none

	label
		font-family: $font
		font-weight 300
		position absolute
		top 28px
		pointer-events none
		padding-left 0.125rem
		z-index 1
		color #b3b3b3
		font-size 15px
		transition all 0.28s ease
		left 15px
		box-sizing border-box
