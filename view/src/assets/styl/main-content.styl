.main-content	overflow hidden	overflow-y auto	&-container		width 780px		margin 50px auto		font: $font		&__title			h1			font-family: $font;			font-weight: $thin;			font-size: 46px;			background: linear-gradient(45deg, #6169ff 0%, #9137fd 20%, #db26a4 100%);			-webkit-background-clip: text;			-webkit-text-fill-color: transparent;			margin-bottom: 50px;	.offers		position relative		&-nav			position absolute			margin-top -17px			width 100%			&__button				transition all .1s linear				position relative				width 35px				height 35px				text-decoration none				overflow hidden				border-radius 50%				background #ececec				background -moz-linear-gradient(top, #ececec 0%, #dbdbdb 100%)				background -webkit-linear-gradient(top, #ececec 0%, #dbdbdb 100%)				background linear-gradient(to bottom, #ececec 0%, #dbdbdb 100%)				font-size 0				&:after					position absolute					color $dark-gray				&--prev					float left					margin-left 15px					&:after						icon($icon-arrow-left, 'Ionicons', 16px)						top 10px						left 15px						margin-left -1px				&--next					float right					margin-right 15px					&:after						icon($icon-arrow-right, 'Ionicons', 16px)						top 10px						left 15px						margin-left 1px				&.slick-disabled					opacity .3s			.offer				position relative				transition all .3s linear				cursor pointer				padding 25px 0				font-family Arial				width 215px				height 215px				border 2px solid $light-gray				border-radius 10px				margin 0 10px				color $dark-gray				background $light				&.isDisabled					pointer-events none				&.inverted					opacity .1				&:hover					border 2px solid $assertive				&:after					icon($icon-checked, 'FontAwesome', 22px)					color $assertive					background-color $light					font-weight 100					transition all .2s ease					position absolute					border-radius 50%					right 10px					top 10px					transform scale(0,0)					padding 5px					opacity 0				&__pre-title					display block					font-size 11px					text-transform uppercase					margin 0 25px				&__title					display block					transition all .3s linear					font-size 14px					letter-spacing .5px					color $positive					margin 5px 25px 0				&__content					display block					height 115px					font-size 12px					font-weight 500					line-height 130%					letter-spacing .5px					overflow auto					padding 0 25px					margin 10px 10px 0 0					&::-webkit-scrollbar						width 1px					&::-webkit-scrollbar-track						-webkit-box-shadow inset 0 0 6px alpha($dark-gray, 10%)						-webkit-border-radius 10px						border-radius 10px					&::-webkit-scrollbar-thumb						-webkit-border-radius 10px						border-radius 10px						background alpha($dark-gray, 50%)				&.selected					background $assertive					background -moz-linear-gradient(top, $assertive 0%, darken($assertive, 5%) 100%)					background -webkit-linear-gradient(top, $assertive 0%, darken($assertive, 5%) 100%)					background linear-gradient(to bottom, $assertive 0%, darken($assertive, 5%) 100%)					border 2px solid $assertive					color $light					&:after						transform scale(1,1)						opacity 1					.offer__title						color $light