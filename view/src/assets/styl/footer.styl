.gray-btn	transition()	display inline-block	font-family Arial	font-size 11px	text-transform uppercase	text-decoration none	letter-spacing 1px	background-color $dark-gray	color $light	padding 15px 30px	border-radius 20px	margin-right 15px	overflow hidden	cursor pointer	hover-color(lighten($dark-gray, 20%)).buttons-cntr	position relative	margin 20px 60px	.actions		transition()		float left		pointer-events all		opacity 1		&__button			@extends .gray-btn		&.hidden			pointer-events none			opacity 0	.status-steps		transition()		absolute()		pointer-events none		top 0		opacity 0		&__step			transition()			position relative			display inline-block			padding-left 51px			margin-right 30px			font-family Arial			font-size 11px			text-transform uppercase			font-weight 700			padding-top 15px			opacity 1			height 41px			&.isDisabled				opacity 0			&:last-of-type				margin-right 0			&:before				transition()				absolute()				content ''				left 0				top 0				width 41px				height 41px				background-color lighten($positive, 70%)				border-radius 50%			&:after				transition()				absolute()				icon($icon-checked-thin, 'Ionicons', 40px)				top 0				left 13px				color $light				opacity 0			&.done				&:before					background-color $positive				&:after					opacity 1			&.timeouted				&:before					background-color $red				&:after					icon($icon-alert, 'Ionicons', 18px)					top 10px					left 18px					opacity 1		&.show			opacity 1		&.remove			opacity 0			top 20px	.end-process		transition()		absolute()		width 100%		top 20px		left 0		opacity 0		pointer-events none		&.show			top 0			opacity 1			pointer-events all		&__button			transition()			absolute()			@extends .gray-btn			&--cancel				left 0				opacity 0				top 20px				&.show					top 0					opacity 1			&--retry				right 0				background-color $positive				margin 0				opacity 0				top 20px				&.isDisabled					pointer-events none				&.show					top 0					opacity 1					hover-color(lighten($positive, 20%))			&--close				background-color $positive				width 41px				padding 15px 0				text-align center				left 50%				margin-left -20px				margin-right 0				color $positive				opacity 0				pointer-events none				&.morph					background-color $green					width 150px					margin-left -75px					color $light					opacity 1					pointer-events all					hover-color(lighten($green, 20%))	.send-offer		transition()		position absolute		right 0		display inline-block		float right		font-family Arial		font-size 11px		text-transform uppercase		text-decoration none		letter-spacing 1px		background-color $positive		color $light		padding 15px 30px		padding-left 55px		border-radius 20px		vertical-align middle		white-space nowrap		width 186px		cursor pointer		pointer-events all		hover-color(lighten($positive, 20%))		&.isDisabled			pointer-events none			opacity .5		&__wrapper			transition()			overflow hidden			width 100%			opacity 1		&:before			absolute()			icon($icon-send, 'Ionicons', 18px)			top 50%			left 30px			margin-top -9px			color $light			font-weight 100			vertical-align middle			opacity 1		&.collapse			width 41px			padding 15px 20px			pointer-events none			.send-offer__wrapper				width 0				opacity 0			&:before				opacity 0		&.hide			opacity 0