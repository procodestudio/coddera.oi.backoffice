.header	position relative	background #f3f3f3	background -moz-linear-gradient(top, #ffffff 0%, #f3f3f3 100%)	background -webkit-linear-gradient(top, #ffffff 0%, #f3f3f3 100%)	background linear-gradient(to bottom, #ffffff 0%, #f3f3f3 100%)	padding 0 60px	height 120px	overflow hidden	border-top-left-radius 10px	border-top-right-radius 10px	&:after		transition width .5s $ease-out-quart		content ''		position absolute		bottom 0		left 0		width 0		height 2px		background-color $positive	&.offer-sended		&:after			width 100%	&__logo		float left		margin-top 20px		margin-right 30px	.info-box		float left		position relative		padding-left 35px		margin-right 35px		margin-top 45px		font-family Arial		font-weight 400		color $dark-gray		&:last-of-type			margin-right 0		&__title			font-family $font			font-weight 600			color $light-gray			text-transform uppercase			font-size 11px		&__data			font-family $font			display block			font-size 16px			margin-top 5px			max-width 240px			line-height 20px		&--status			&__data				color $positive		&:before			position absolute			top 0			left 0			color $light-gray		&--user				fa(user)				font-size 32px				float right		&--date			&:before				icon($icon-clock, 'Ionicons', 32px)		&--status			&:before				icon($icon-refresh, 'Ionicons', 43px)				color $positive				top -5px.header-menu	width 100%	padding 10px 60px	background #eaeaea	font-family $font	font-weight 400	font-size 13px	color #5f5f5f	text-transform uppercase	ul		display flex		justify-content center	li		display inline-block		margin-right 35px		flex-grow 1		text-align center		padding 15px 0		&.selected			color #aaaaaa			background $positive