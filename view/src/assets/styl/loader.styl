.loader-overlay
	position absolute
	top 0
	right 0
	left 0
	bottom 0
	text-align center
	padding-top 27%
	background rgba(255,255,255,0.8)
	z-index 2
	color $orange
	border-radius 10px

.loader-container
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	height auto
	display inline-table
	text-align center
	z-index 3
	color $orange
